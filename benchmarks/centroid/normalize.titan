function new(x: float, y: float): {float}
    return { x, y }
end

function centroid(points: {{float}}, N: integer): {float}
    local x = 0.0
    local y = 0.0
    local npoints = #points
    for _ = 1, N do
        x = 0.0
        y = 0.0
        for i = 1, npoints do
            local p = points[i]
            x = x + p[1]
            y = y + p[2]
        end
    end
    return { x / #points, y / #points }
end
