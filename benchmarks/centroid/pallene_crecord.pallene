record point x: float; y:float end

function new(x: float, y: float): point
    return { x = x, y = y }
end

function centroid(points: {point}, nrep: integer): point
    local x = 0.0
    local y = 0.0
    local npoints = #points
    for _ = 1, nrep do
        x = 0.0
        y = 0.0
        for i = 1, npoints do
            local p = points[i]
            x = x + p.x
            y = y + p.y
        end
    end
    return { x = x / npoints, y = y / npoints }
end
